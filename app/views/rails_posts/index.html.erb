<p id="notice"><%= notice %></p>

<h1>Rails Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rails_posts.each do |rails_post| %>
      <tr>
        <td><%= rails_post.title %></td>
        <td><%= rails_post.content %></td>
        <td><%= link_to 'Show', rails_post %></td>
        <td><%= link_to 'Edit', edit_rails_post_path(rails_post) %></td>
        <td><%= link_to 'Destroy', rails_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rails Post', new_rails_post_path %>
